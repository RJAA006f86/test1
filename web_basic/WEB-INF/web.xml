<web-app>
    <servlet>
        <servlet-name>HelloServletMapping</servlet-name>
        <servlet-class>ch03.HelloServlet</servlet-class>
    </servlet>
    <servlet>
		<servlet-name>GuessServletMapping</servlet-name>
		<servlet-class>ch04.GuessServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UserctlMapping</servlet-name>
		<servlet-class>ch05.Userctl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AdminMapping</servlet-name>
		<servlet-class>ch05.Admin</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ColorDecideMapping</servlet-name>
		<servlet-class>ch05.ColorDecide</servlet-class>
	</servlet>

    <servlet-mapping>
        <servlet-name>HelloServletMapping</servlet-name>
        <url-pattern>/HelloServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
		<servlet-name>GuessServletMapping</servlet-name>
		<url-pattern>/GuessServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UserctlMapping</servlet-name>
		<url-pattern>/Userctl</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AdminMapping</servlet-name>
		<url-pattern>/Admin</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ColorDecideMapping</servlet-name>
		<url-pattern>/ColorDecide</url-pattern>
	</servlet-mapping>
</web-app>